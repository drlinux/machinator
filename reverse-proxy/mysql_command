CREATE DATABASE IF NOT EXISTS MYSQL_DATABASE_NAME;
CREATE USER 'MYSQL_DATABASE_USER'@'localhost' IDENTIFIED BY 'MYSQL_DATABASE_PASSWORD'; 
CREATE USER 'MYSQL_DATABASE_USER'@'%' IDENTIFIED BY 'MYSQL_DATABASE_PASSWORD'; 
GRANT ALL PRIVILEGES ON MYSQL_DATABASE_NAME.* TO 'MYSQL_DATABASE_USER'@'localhost' WITH GRANT OPTION;
GRANT ALL PRIVILEGES ON MYSQL_DATABASE_NAME.* TO 'MYSQL_DATABASE_USER'@'%' WITH GRANT OPTION;
FLUSH PRIVILEGES;